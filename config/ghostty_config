# Appearance
## Dark
#theme = catppuccin-mocha.conf
## Mid Dark
#theme = catppuccin-macchiato.conf
## Light Dark
#theme = catppuccin-frappe.conf

# Window
macos-titlebar-style = tabs
window-colorspace = display-p3
window-width = 160
window-height = 48
window-padding-x = 24
window-padding-y = 20
window-decoration = true
window-save-state = always

# Font
#font-family = "MesloLGS NF"
#font-size = 13
font-size = 15
font-thicken = true
font-feature = -liga,-dlig

# Cursor
cursor-style = block
cursor-color = ffffff

# Scrollback
scrollback-limit = 100000

# Selection
selection-clear-on-typing = true

# Keybindings
keybind = alt+cmd+left=previous_tab
keybind = alt+cmd+right=next_tab
